@page
@model Demo.Pages.Employees.CreateModel
@{
}

<br>
<h2>Thêm nhân viên</h2>

@if(Model.failMessage.Length>0){
	<div class = 'alert alert-warning alert-dismissible fade show' role = 'alert'>
		<strong>@Model.failMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss = 'alert' aria-label='Close'></button>
	</div>
}

<form method = "POST">
	<div class = "row mb-3">
		<label class = "col-sm-3 col-form-label">Họ tên</label>
		<div class = "col-sm-6">
			<input type = "text" class = "form-control" name = "name" value="@Model.employeeInfo.name">
		</div>
	</div>
	<div class = "row mb-3">
		<label class = "col-sm-3 col-form-label">Tuổi</label>
		<div class = "col-sm-6">
			<input type = "text" class = "form-control" name = "age" value="@Model.employeeInfo.age">
		</div>
	</div>
	<div class = "row mb-3">
		<label class = "col-sm-3 col-form-label">Email</label>
		<div class = "col-sm-6">
			<input type = "text" class = "form-control" name = "email" value="@Model.employeeInfo.email">
		</div>
	</div>
	<div class = "row mb-3">
		<label class = "col-sm-3 col-form-label">Số điện thoại</label>
		<div class = "col-sm-6">
			<input type = "text" class = "form-control" name = "phone" value="@Model.employeeInfo.phone">
		</div>
	</div>
	<div class = "row mb-3">
		<label class = "col-sm-3 col-form-label">Bộ phận</label>
		<div class = "col-sm-6">
			<input type = "text" class = "form-control" name = "job" value="@Model.employeeInfo.job">
		</div>
	</div>

	@if (Model.completeMessage.Length > 0) {
	<div class = "row mb-3">
		<div class = "col-sm-9">
			<div class = 'alert alert-success alert-dismissible fade show' role = 'alert'>
				<strong>@Model.completeMessage</strong>
				<button type='button' class='btn-close' data-bs-dismiss = 'alert' aria-label='Close'></button>
			</div>
		</div>
	</div>
	}

	<div class = "row mb-3">
		<div class = "offset-sm-3 col-sm-3 d-grid">
			<button type = "submit" class = "btn btn-primary"> Thêm </button>
		</div>
		<div class = "col-sm-3 d-grid">
		<a class = "btn btn-outline-primary" href = "/Employees/Index" role = "button">Huỷ</a>
		</div>
	</div>

</form>
